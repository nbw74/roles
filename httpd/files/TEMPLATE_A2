<VirtualHost 127.0.0.1:8888>
    DocumentRoot [BASEDIR]/[USER]/[WEBROOT]
    ServerAdmin admin@[DOMAIN]
    ServerName [DOMAIN]
    ServerAlias www.[DOMAIN]
    ErrorLog [BASEDIR]/[USER]/log/[SUBDOMAIN]apache-error.log
    CustomLog [BASEDIR]/[USER]/log/[SUBDOMAIN]apache-access.log combined

    <Directory [BASEDIR]/[USER]/[WEBROOT]>
        Options -ExecCGI -Indexes -Includes +FollowSymLinks
        AllowOverride All

        <Limit GET POST>
            Order allow,deny
            Allow from all
        </Limit>

        <LimitExcept GET POST>
            Order deny,allow
            Deny from all
        </LimitExcept>
    </Directory>

    AssignUserId apache [USER]

    php_admin_value open_basedir "[BASEDIR]/[USER]/:."
    php_admin_value upload_tmp_dir "[BASEDIR]/[USER]/tmp"
    php_admin_value session.save_path "[BASEDIR]/[USER]/tmp"
    php_admin_value mbstring.internal_encoding "UTF-8"
#    php_admin_value mbstring.func_overload "2"

</VirtualHost>

