{% if item.proxy_host_header|d('external') == 'external' %}
{% if is_mobile|d() %}
	proxy_set_header		Host m.{{ item.name }};
{% else %}
	proxy_set_header		Host {{ item.name }};
{% endif %}
{% elif item.proxy_host_header|d('external') == 'internal' %}
	proxy_set_header		Host {{ item.proxy_pass|regex_replace('(^\w+://|/$)', '') }};
