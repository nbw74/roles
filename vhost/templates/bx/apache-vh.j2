	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>

	<DirectoryMatch .*\.svn/.*>
		 Require all denied
	</DirectoryMatch>

	<DirectoryMatch .*\.git/.*>
		 Require all denied
	</DirectoryMatch>

	<DirectoryMatch .*\.hg/.*>
		 Require all denied
	</DirectoryMatch>

	<Directory {{ siteroot }}/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		DirectoryIndex index.php index.html index.htm
		php_admin_value session.save_path /tmp/php_sessions/{{ item.user|d(item.name) }}
		php_admin_value upload_tmp_dir /tmp/php_upload/{{ item.user|d(item.name) }}
        Require all granted
	</Directory>

	<Directory {{ siteroot }}/bitrix/cache>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory {{ siteroot }}/bitrix/managed_cache>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory {{ siteroot }}/bitrix/local_cache>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory {{ siteroot }}/bitrix/stack_cache>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory {{ siteroot }}/upload>
		AllowOverride none
		AddType text/plain php,php3,php4,php5,php6,phtml,pl,asp,aspx,cgi,dll,exe,ico,shtm,shtml,fcg,fcgi,fpl,asmx,pht
		php_value engine off
	</Directory>

	<Directory {{ siteroot }}/upload/support/not_image>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory {{ siteroot }}/bitrix/images>
		AllowOverride none
		AddType text/plain php,php3,php4,php5,php6,phtml,pl,asp,aspx,cgi,dll,exe,ico,shtm,shtml,fcg,fcgi,fpl,asmx,pht
		php_value engine off
	</Directory>

	<Directory {{ siteroot }}/bitrix/tmp>
		AllowOverride none
		AddType text/plain php,php3,php4,php5,php6,phtml,pl,asp,aspx,cgi,dll,exe,ico,shtm,shtml,fcg,fcgi,fpl,asmx,pht
		php_value engine off
	</Directory>

	AssignUserId {{ vhost_backuser }} {{ item.user|d(item.name) }}

	ErrorLog logs/error_log
	# Possible values include: debug, info, notice, warn, error, crit, alert, emerg.
	LogLevel warn

	CustomLog logs/access_log combined

	php_admin_value sendmail_path "msmtp -C /var/www/{{ item.user|d(item.name) }}/.msmtprc_httpd -t -i"

	<IfModule mod_rewrite.c>
		#Nginx should have "proxy_set_header HTTPS YES;" in location
		RewriteEngine On
		RewriteCond %{HTTP:HTTPS} =YES
		RewriteRule .* - [E=HTTPS:on,L]
	</IfModule>
</VirtualHost>
